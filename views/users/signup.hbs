<div class="text-2xl mb-4 font-semibold">Registracija korisnika</div>

<form method="post" action="/users/signup" class="grid grid-cols-1 max-w-md gap-2">
    <label class="block" for="name">Ime</label>
    <input type="text" name="name" minlength="3" maxlength="100" required="" />
    <br />
    <label for="email">E-mail adresa</label>
    <input type="email" name="email" maxlength="100" required="" />
    <br />
    <label for="password">Zaporka</label>
    <input type="password" name="password" minlength="6" required="" />
    <br />
    <label for="passwordConfirmation">Potvrda zaporke</label>
    <input type="password" name="passwordConfirmation" minlength="6" required="" />
    <br />
    <input type="submit" value="Potvrdi" class="w-full p-2 bg-red-800 text-white hover:bg-red-500 rounded cursor-pointer"/>
    <input type="reset" value="Poništi" class="w-full p-2 bg-green-500 text-white hover:bg-green-800 rounded cursor-pointer" />
</form>

{{#if error_validation}}
<p>Dogodila se greška u provjeri podataka</p>
{{/if}}

{{#if error_database}}
<p>Dogodila se greška prilikom spremanjau bazu podataka</p>
{{/if}}

{{#if success}}
<p>Kosisnik je uspješno registriran</p>
{{/if}}

